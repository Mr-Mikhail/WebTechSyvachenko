@model List<OnlineShop.ViewModels.CategoryViewModel>

@{
    ViewData["Title"] = "All";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@if (Model.Count > 0)
{
    <table class="table">
        <thead>
        <tr>
            <th>Category Name</th>
            <th>Category Description</th>
            <th>Edit</th>
        </tr>
        </thead>
        <tbody>
        @foreach (var category in Model)
        {
            <tr>
                <td>@category.Name</td>
                <td>@category.Description</td>
                <td>
                    <a href="@Url.Action("Edit", "CategoryManagementSystem", new { id = category.Id })">Edit</a>
                </td>
            </tr>
        }
        </tbody>
    </table>
}
else
{
    <p>No products available.</p>
}

