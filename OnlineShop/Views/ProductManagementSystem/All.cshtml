@model List<OnlineShop.ViewModels.ProductViewModel>

<h1>Product List</h1>

@if (Model.Count > 0)
{
    <table class="table">
        <thead>
        <tr>
            <th>Product Name</th>
            <th>Product Description</th>
            <th>Product Price</th>
            <th>Currency</th>
            <th>Edit Product</th>
        </tr>
        </thead>
        <tbody>
        @foreach (var product in Model)
        {
            <tr>
                <td>@product.ProductName</td>
                <td>@product.ProductDescription</td>
                <td>@product.ProductPrice</td>
                <td>@product.Currency</td>
                <td>
                    <a href="@Url.Action("Edit", "ProductManagementSystem", new { id = product.Id })">Edit</a>
                </td>
            </tr>
        }
        </tbody>
    </table>
}
else
{
    <p>No products available.</p>
}