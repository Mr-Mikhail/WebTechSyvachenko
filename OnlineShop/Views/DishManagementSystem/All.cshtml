@model List<OnlineShop.ViewModels.DishViewModel>

<h1>Dish List</h1>

@if (Model.Count > 0)
{
    <table class="table">
        <thead>
        <tr>
            <th>Dish Name</th>
            <th>Dish Description</th>
            <th>Dish Price</th>
            <th>Currency</th>
            <th>Photo</th>
            <th>Edit Dish</th>
        </tr>
        </thead>
        <tbody>
        @foreach (var dish in Model)
        {
            <tr>
                <td>@dish.Name</td>
                <td>@dish.Description</td>
                <td>@dish.Price</td>
                <td>@dish.Currency</td>
                <td>
                    @if(dish.PhotoUrl != null)
                    {
                        <img src="@dish.PhotoUrl" alt="Dish Photo" width="250px" height="auto" />
                    }
                    else
                    {
                        <span>No Photo Available</span>
                    }
                </td>
                <td>
                    <a href="@Url.Action("Edit", "DishManagementSystem", new { id = dish.Id })">Edit</a>
                </td>
            </tr>
        }
        </tbody>
    </table>
}
else
{
    <p>No dishes available.</p>
}