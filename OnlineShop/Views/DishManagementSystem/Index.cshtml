@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Welcome to the Product Management System</h1>

<div class="row">
    <div class="col-md-6">
        <h2>Create a New Product</h2>
        <p>Create a new product entry in the system.</p>
        <a class="btn btn-primary" href="@Url.Action("Create", "DishManagementSystem")">Create Product</a>
    </div>
    
    <div class="col-md-6">
        <h2>View All Products</h2>
        <p>View a list of all products in the system.</p>
        <a class="btn btn-primary" href="@Url.Action("All", "DishManagementSystem")">View All Products</a>
    </div>
    
    <div class="col-md-6">
        <h2>View All Categories</h2>
        <p>View a list of all categories in the system.</p>
        <a class="btn btn-primary" href="@Url.Action("All", "CategoryManagementSystem")">View All Categories</a>
    </div>
</div>
