@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Welcome to the Dish Management System</h1>

<div class="row">
    <div class="col-md-6">
        <h2>Create a New Dish</h2>
        <p>Create a new dish entry in the system.</p>
        <a class="btn btn-primary" href="@Url.Action("Create", "DishManagementSystem")">Create Dish</a>
    </div>
    
    <div class="col-md-6">
        <h2>View All Dishes</h2>
        <p>View a list of all dishes in the system.</p>
        <a class="btn btn-primary" href="@Url.Action("All", "DishManagementSystem")">View All Dishes</a>
    </div>
    
    <div class="col-md-6">
        <h2>View All Categories</h2>
        <p>View a list of all categories in the system.</p>
        <a class="btn btn-primary" href="@Url.Action("All", "CategoryManagementSystem")">View All Categories</a>
    </div>
</div>
